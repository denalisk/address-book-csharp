@{
    Layout="Shared/_Layout.cshtml";
}

    <form id="new-contact" class="contact-form" action="contact/new" method="post">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <label for="new-name">Name</label>
                    <input type="text" id="new-name" name="new-name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="new-phone-number">Phone Number</label>
                    <input type="text" id="new-phone-number" name="new-phone-number" class="form-control">
                </div>
                <div class="form-group">
                    <label for="new-email">Email</label>
                    <input type="text" id="new-email" name="new-email" class="form-control">
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label for="new-street-address">Street Address</label>
                    <input type="text" id="new-street-address" name="new-street-address" class="form-control">
                </div>
                <div class="form-group">
                    <label for="new-city">City</label>
                    <input type="text" id="new-city" name="new-city" class="form-control">
                </div>
                <div class="form-group">
                    <label for="new-state">State</label>
                    <input type="text" id="new-state" name="new-state" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary">Add Contact</button>
        </div>
    </form>
